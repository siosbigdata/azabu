<div id="setting">
<%= form_for(@admin_group) do |f| %>
  <% if @admin_group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@admin_group.errors.count, "error") %> <%= t('error.group.message') %></h2>

      <ul>
      <% @admin_group.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="actions">
    <%= f.submit t('helpers.submit.update'),:class=>"button_admin" %>
  </div>
<% end %>
</div>
