<%= render 'common/header' %>
<div id="login">
	<%= form_tag :controller => 'login', :action => 'create' do -%>
	<h2 id="login_title"><%= t('login.title') %></h2>
	<table>
	<tbody>
		<tr>
			<th><%= label_tag :mail, t('login.mail') %></th>
			<td><%= text_field_tag :mail, params[:mail] %></td>
		</tr>
		<tr>
			<th><%= label_tag :pass, t('login.password') %></th>
			<td><%= password_field_tag :pass , params[:pass]%></td>
		</tr>
		<% if @errormsg %>
			<tr><td colspan="2">
			<div id="error_msg"><%= t('login.error.message') %><br /></div>
			</td></tr>
		<% end %>
	</tbody>
	</table>
	<div id="login_action"><%= submit_tag t('login.title'),:class=>'button' %></div>
	<% end %>
	
	<div id="forgotten_password"><%= link_to t('login.forgotten.password.user'), new_password_reset_path %></div>
</div>
<%= render 'common/footer' %>
