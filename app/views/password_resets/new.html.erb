<%= render 'common/header' %>
<div id="login">
	<h2 id="login_title"><%= t('forgotten_password') %></h2>
	
	<%= form_tag password_resets_path, :method => :post do %>
	<table>
	<tbody>
		<tr><td colspan="2"><%= t('forgotten_password_message')%></td></tr>
		<tr><td><%= label_tag t('mail') %></td>
	    <td><%= text_field_tag :email, params[:email] %></td></tr>
	</tbody>
	</table>
	 <div id="login_action"><%= submit_tag t('title_send'),:class=>'button' %></div>
	<% end %>

</div>
<%= render 'common/footer' %>