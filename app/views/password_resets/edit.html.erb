<%= render 'common/header' %>
<div id="login">
	
<%= form_for @user, :url => password_reset_path(params[:id]) do |f| %>
  <% if @user.errors.any? %>
  	<div id="error_explanation">
      <h2><%= pluralize(@user.errors.count,"error" )%> <%= t('error_user_message') %></h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <table>
  	<tbody>
  	<tr><td><%= f.label :password %></td><td><%= f.password_field :password %></td></tr>
  	<tr><td><%= f.label :password_confirmation %></td><td><%= f.password_field :password_confirmation %></td></tr>
  	</tbody>
  </table>
  <div id="login_action"><%= f.submit t('title_send'),:class=>'button' %></div>
<% end %>

</div>
<%= render 'common/footer' %>